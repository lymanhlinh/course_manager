#register_form.container
  .row
    .col-lg-7.col-md-8.col-sm-10.col-xs-12
      .page-guide-div
        .page-title Register
        .page-description Fill the register and learn with us.
      = form_for(resource, as: resource_name, url: student_registration_path) do |f|
        = devise_error_messages!
        .content-div
          .row
            .col-all-2
              = f.label "Full name"
            .col-all-10
              = f.text_field :full_name, autofocus: true, placeholder: 'Full name'
          .row
            .col-all-2
              = f.label :email
            .col-all-10
              = f.email_field :email, autofocus: false, placeholder: "@"
          .row
            .col-all-2
              = f.label :password
            .col-all-10
              = f.password_field :password, autocomplete: "off", placeholder: "minimum #{@minimum_password_length} characters"
          .row
            .col-all-2
              = f.label "Confirm Password"
            .col-all-10
              = f.password_field :password_confirmation, autocomplete: "off", placeholder:"Retype the password"
          .row
            .col-all-2
              = f.label "Birth day"
            .col-all-10
              #datetimepicker.input-group.date
                = f.text_field :birth_day, placeholder: 'dd/mm/yyyy'
                %span.input-group-addon
                  %span.glyphicon.glyphicon-calendar
          .row
            .col-all-2
              = f.label "Phone"
            .col-all-10
              = f.text_field :phone_number, placeholder: 'Phone number', class: 'phone_number'
          .row.captcha-row
            .col-all-2
              %span Captcha
            .col-all-10
              = recaptcha_tags
        .button-div
          .col-all-6.cancel-button-div
            = link_to "Cancel", :back, class: 'cancel-link'
          .col-all-6.send-button-div.no-padding-right
            .actions
              = f.submit "Submit", class: "send-button-long", id: "send_button"
